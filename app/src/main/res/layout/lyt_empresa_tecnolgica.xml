<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivImagenEmpresaTecnologica"
            android:layout_width="60dp"
            android:layout_height="60dp"></ImageView>

        <TextView
            android:id="@+id/tvNombreEmpresaTecnologica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"></TextView>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivWebEmpresaTecnologica"
            android:src="@drawable/ic_baseline_web_24"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>

        <TextView
            android:id="@+id/tvWebEmpresaTecnologica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivCorreoEmpresaTecnologica"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>

        <TextView
            android:id="@+id/tvCorreoEmpresaTecnologica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"></TextView>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivUbicacionTecnologica"
            android:src="@drawable/ic_location_24"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>

        <TextView
            android:id="@+id/tvUbicacionEmpresaTecnologica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"></TextView>
    </LinearLayout>

</LinearLayout>