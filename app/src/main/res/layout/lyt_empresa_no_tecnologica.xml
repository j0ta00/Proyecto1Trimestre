<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivImagenEmpresaNoTecnologica"
            android:layout_width="60dp"
            android:layout_height="60dp"></ImageView>

        <TextView
            android:id="@+id/tvNombreEmpresaNoTecnologica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"></TextView>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivCnaeEmpresaNoTecnologica"
            android:src="@drawable/ic_baseline_work_24"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>

        <TextView
            android:id="@+id/tvivCnaeEmpresaNoTecnologica"
            android:text="CNAE:"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />
    </LinearLayout>
</LinearLayout>